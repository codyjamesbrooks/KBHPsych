<header data-controller="openable"
  data-openable-open-class="nav--open"
  class="group text-[.9rem] site-container py-3.5 flex items-center justify-between relative bg-white">
  <a href="<%= relative_url '/' %>">
    <img src="<%= relative_url '/images/logos/png/logo.png' %>" alt="Logo" class="h-10">
  </a>
  <nav class="flex my-auto gap-4 items-center bg-white">
    <ul class="bg-white pl-8 group-[.nav--open]:py-6
      absolute md:static left-0 right-0 top-[99.96%] z-10
      flex flex-col md:flex-row gap-4 md:items-center
      max-h-0 group-[.nav--open]:max-h-[300px] md:max-h-fit h-auto
      transition-max-h duration-700
      overflow-hidden md:overflow-visible
      group-[.nav--open]:border-b-2 md:!border-0 border-slate-300">
      <li><a class="blue-highlight" href="<%= relative_url '/about' %>">About</a></li>
      <li><a class="blue-highlight" href="<%= relative_url '/services' %>">Services</a></li>
      <li><a class="blue-highlight" href="<%= relative_url '/media' %>">Media</a></li>
      <li class="whitespace-nowrap">
        <a href="<%= relative_url '/contact' %>"
          class="cta-button relative z-20 group/cta block w-fit">
          Contact
          <span class="hidden absolute h-full w-full bg-cta-green -bottom-0.5 -right-0.5 group-hover/cta:block transition-all -z-10"></span>
        </a>
      </li>
    </ul>
    <a href="#"
      class="md:hidden"
      data-action="openable#updateState">
      <%= svg "/images/menu.svg", class: "text-slate-300" %>
    </a>
    <a href="<%= relative_url '/contact' %>"
      class="cta-button md:hidden relative z-20 group/cta">
      Contact
      <span class="hidden absolute h-full w-full bg-cta-green -bottom-0.5 -right-0.5 group-hover/cta:block transition-all -z-10"></span>
    </a>
  </nav>
</header>

